<div class="col-md-6">
  <div class="panel">
    <div class="panel-heading">
      <h3 class="panel-title">Twitter Feed</h3>
    </div>
    <div class="panel-body">
      <%# <div class="form-group">
        <textarea class="form-control" placeholder="Enter here for tweet..." rows="3"></textarea>
      </div>
      <a href="javascript:void(0)" class="btn btn-info btn-sm pull-right waves-effect waves-light">Tweet</a> %>

      
      <% if user_signed_in? %>
        <%= render 'form' %>
      <% end %>
      
      <div class="clearfix"></div>
      <hr class="margin-bottom-10">
      <ul class="list-group list-group-dividered list-group-full">
        <% @tweeets.each do |tweeet| %>
        
          <li class="list-group-item">
            <div class="media">
              <div class="media-left mr-3">
                <a class="avatar avatar-online" href="javascript:void(0)">
                  <%= gravatar_image_tag(tweeet.user.email, size: 64, alt: tweeet.user.name) %>
                  <i></i>
                </a>
              </div>
              <div class="media-body">
                <small class="text-muted float-right">Just now</small>
                <h6 style="font-size: .7rem;" class='text-muted'>@<%= tweeet.user.username %></h6>
                <div><%= tweeet.Tweeet %>.</div>
                <div class="d-flex justify-content-around w-25 my-1">
                  
                  <%= link_to tweeet do %>
                    <i class="fa-solid fa-link"></i>
                  <% end %>

                  <% if user_signed_in? %>
                    <%= link_to edit_tweeet_path(tweeet) do %>
                      <i class="fa-solid fa-pencil"></i>
                    <% end %>
                    
                    <%= link_to tweeet, method: :delete, data: { confirm: 'Are you sure?' } do %>
                      <i class="fa-solid fa-trash-can"></i>
                    <% end %>
                    
                  <% end %>
                  


                </div>
              </div>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
